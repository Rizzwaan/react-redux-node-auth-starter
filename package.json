{
  "name": "react-redux-node-auth-starter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "npm --prefix ./client install; npm --prefix ./server install",
    "start": "cd client; react-scripts start; cd ../server; react-scripts start",
    "build": "cd client; react-scripts build; cd ../server; react-scripts build",
    "test": "cd client; react-scripts test --env=jsdom --collectCoverageFrom=src/**.{js,jsx} --collectCoverageFrom=!src/index.js --collectCoverageFrom=!src/registerServiceWorker.js --coverage",
    "coverage": "npm run test; open file:///$PWD/coverage/lcov-report/index.html",
    "lint": "./node_modules/.bin/eslint . --fix",
    "eject": "react-scripts eject"
  }
}
